<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ucam.java.android.application_p2_android.LoginActivity"
    android:background="@drawable/aluno"
    android:focusable="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="visible"
        android:id="@+id/linearLayout">

        <EditText
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/TxtEmail"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:hint=" Email"
            android:alpha="0.8"
            android:background="@android:color/background_light"
            android:allowUndo="false" />

        <EditText
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/TxtSenha"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:hint=" Senha"
            android:alpha="0.8"
            android:background="@android:color/background_light" />
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:columnCount="3"
        android:rowCount="3">

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cadastro de Login"
        android:id="@+id/TelaDeLogintextView"
        android:textStyle="bold"
        android:textColor="@color/background_floating_material_light"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:textColor="@color/colorPrimary" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Limpar"
        android:id="@+id/BtnLimpar"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_alignBaseline="@+id/BtnLogin"
        android:layout_alignBottom="@+id/BtnLogin"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="49dp" />

    <Button
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/BtnLogin"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp" />

    <Button
        android:text="Cadastrar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:id="@+id/BtnCadastrar"
        android:layout_below="@+id/TelaDeLogintextView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
