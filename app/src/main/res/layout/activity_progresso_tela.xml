<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_progresso_tela"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ucam.java.android.application_p2_android.ProgressoTela"
    android:background="@drawable/aluno"
    tools:background="@drawable/aluno">

    <TextView
        android:text="Progresso das Matérias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3"
        android:textSize="22sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="42dp"
        android:background="@android:color/background_light"
        android:alpha="0.9"
        android:scrollbarStyle="outsideOverlay"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_height="300dp">

        <TextView
            android:text="Matéria 1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TxtMateria1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp" />

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/MateriaBar1"
            android:layout_marginTop="0dp"
            android:max="100"
            android:progress="50"
            android:keepScreenOn="false"
            android:layout_marginLeft="15dp"
            android:minHeight="16dp"
            android:indeterminate="false"
            android:layout_width="280dp" />

        <TextView
            android:text="Matéria 2"
            android:layout_height="wrap_content"
            android:id="@+id/TxtMateria2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="wrap_content"
            android:id="@+id/MateriaBar2"
            android:layout_marginLeft="15dp"
            android:max="100"
            android:progress="35"
            android:layout_width="280dp" />

        <TextView
            android:text="Matéria 3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TxtMateria3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="wrap_content"
            android:id="@+id/MateriaBar3"
            android:layout_marginLeft="15dp"
            android:max="100"
            android:progress="35"
            android:layout_width="280dp" />

        <TextView
            android:text="Matéria 4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TxtMateria4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="wrap_content"
            android:id="@+id/MateriaBar4"
            android:layout_marginLeft="15dp"
            android:max="100"
            android:progress="90"
            android:layout_width="280dp" />

        <TextView
            android:text="Matéria 5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TxtMateria5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar7"
            android:layout_marginLeft="15dp"
            android:max="100"
            android:progress="65"
            android:layout_width="280dp" />

        <TextView
            android:text="Matéria 6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TxtMateria6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar8"
            android:layout_marginLeft="15dp"
            android:max="100"
            android:progress="45"
            android:layout_width="280dp" />

    </LinearLayout>

    <Button
        android:text="Voltar"
        android:layout_height="wrap_content"
        android:id="@+id/BtnVoltar"
        android:layout_width="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp" />

    <Button
        android:text="Início"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/BtnInicio3"
        android:layout_alignBaseline="@+id/BtnVoltar"
        android:layout_alignBottom="@+id/BtnVoltar"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
